<div class="col-sm-15 col-md-12 col-lg-9 px-7 px-sm-0 mx-auto align-self-center text-start justify-content-center" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="container">
  <%= form_with model: @order, url: public_order_confirm_path, local: true, class: "needs-validation", novalidate: true do |f| %>

    <% if @order.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-md-4">
        <h4>支払い方法</h4>

        <div class="form-check form-check-inline">
          <%= f.radio_button :payment_method, "credit_card", { class: "form-check-input", checked: true } %>
          <%= f.label :payment_method, "クレジットカード", class: "form-check-label" %>
        </div>

        <div class="form-check form-check-inline">
          <%= f.radio_button :payment_method, "transfer", class: "form-check-input" %>
          <%= f.label :payment_method, "銀行振込", class: "form-check-label" %>
        </div>

        <h4 class="mt-3">お届け先</h4>

        <div class="form-check" style: "margin-bottom: 10px;">
          <%= f.radio_button :select_address, 0, { class: "form-check-input", checked: true } %>
          <label class="form-check-label">
            <span>ご自身の住所</span><br>
            <span>〒<%= current_customer.postal_code %> <%= current_customer.address %></span><br>
            <span><%= current_customer.last_name %> <%= current_customer.first_name %></span>
          </label>
        </div>

        <div class="mt-3 form-check">
          <%= f.radio_button :select_address, 1, class: "form-check-input", id: "registered_address_radio" %>
          <%= label_tag "registered_address_radio", "登録済み住所から選択", class: "form-check-label", style: "margin-bottom: 10px;" %>
        </div>

        <div class="form-check" style="margin-bottom: 20px;">
          <%= f.select :address_id , options_from_collection_for_select(@addresses, :id, :full_address), class: "form-select" %>
        </div>

        <div class="mt-2">
          <div class="form-check">
            <%= f.radio_button :select_address, 2, class: "form-check-input" %>
            <label class="form-check-label" style="margin-bottom: 10px;">新しいお届け先</label>
          </div>
        </div>

        <table>
          <tr class="row">
            <td class="col-4"><span class="rotate">郵便番号</span></td>
            <td class="col-8"><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          
          <tr class="row">
            <td class="col-4"><span class="rotate">住所</span></td>
            <td class="col-8"><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          
          <tr class="row">
            <td class="col-4"><span class="rotate">宛名</span></td>
            <td class="col-8"><%= f.text_field :name, class: "form-control" %></td>
          </tr>
        </table>
        
        
        <div class="col-md-4" style="margin-top:30px; margin-left: 100px;">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" style: width:%>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>