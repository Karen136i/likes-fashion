<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card p-4" style="background-color: #ffc1cc;">
        <h3 class="text-center mb-4" style="color: white;">新規登録</h3>

        <div class="justify-content-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div>
              <%= render "public/shared/error_messages", resource: resource %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, "名前", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control mb-3", placeholder: ' 姓', style: "margin: auto;" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: ' 名', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name_kana, "名前", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control mb-3", placeholder: ' セイ', style: "margin: auto;" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control", placeholder: ' メイ', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: ' sample@gmail.com', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control", placeholder: ' 1230001', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :address, "住所", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder: ' 東京都品川区2-3', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :telephone_number, "電話番号（ハイフンなし）", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control", placeholder: ' 05044531111', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: ' 6文字以上の半角英数字', style: "margin: auto;" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "確認用パスワード", class: "text-white", style: "margin-left: 95px;" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: ' 再入力をお願いします', style: "margin: auto; margin-bottom: 30px;" %>
            </div>

            <div class="form-group">
              <%= f.submit "新規登録", class: "btn btn-lavenderblush btn-block", style: "width: 200px; margin: auto; margin-bottom: 30px;" %>
            </div>
          <% end %>

          <h6 class="text-center mt-5" style="color: #000000;">既に登録済みの方</h6>
          <p class="text-center">
            <%= link_to "こちら", new_customer_session_path, class: "link-style", style: "color: #ffffff;" %> からログインしてください。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
