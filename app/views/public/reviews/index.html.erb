<div class='container' style="margin-top: 50px; margin-bottom: 100px;">
  <div class='row justify-content-center'>
    <div class="col-sm-8 col-md-7 col-lg-6 px-5 px-sm-0 mx-auto align-self-center text-start">
      <h3 class="text-center"><%= @item.name %>のレビュー</h3>
        <% @reviews.each do |review| %>

        <div style="margin-top: 65px;" class="text-center">

          <!-- レビュー一覧 -->
          <div class="text-left">
            ニックネーム ：<span style="margin-right: 300px;"><%= review.nickname %></span>
            <%= review.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d ") %>
          </div>

          <div style="margin-top: 20px;" class="text-left">
            評価：
            <span class="star-rating">
              <% 5.times do |i| %>
