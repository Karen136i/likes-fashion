<div class='container' style="margin-top: 100px; margin-bottom: 100px;">
  <div class='row justify-content-center'>
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto align-self-center text-start">
      <h3 class="text-center"><%= @review.nickname %>のレビュー</h3>

      <div class="row">
        <div class="col-md-6">
          <table class="table" style="border: none;">
            <tr>
              <td rowspan="5" style="border: none;" class="text-start">
                <div class="text-center mb-3">
                  <%= image_tag @review.item.image, size: "100x100", class: "img-fluid" %>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <!-- 商品詳細 -->
        <div class="col-md-6">
          <table class="table" style="border: none;">
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">商品名</th>
              <td style="border: none;"><%= @review.item.name %></td>
            </tr>

            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">星評価</th>
              <td style="border: none;"><%= @review.star %> </td>
            </tr>

            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">コメント</th>
              <td style="border: none; white-space: normal;"><%= @review.review_content %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
