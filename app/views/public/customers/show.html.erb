<div class="container mt-5">
  <h1 class="text-center"><i class="fa-solid fa-user"></i> my page</h1>

  <h3 class="my-4">登録情報</h3>
  <%= link_to "編集する", edit_public_customer_path, class: "btn btn-success" %>
  <%= link_to "退会する", unsubscribe_public_customer_path, class: "btn btn-danger" %>

 <div style="border-radius: 20px; overflow: hidden;">
  <table class="table table-bordered my-2" style="table-layout: fixed;">

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">氏名</th>
      <td class="telephone-number" style="background-color: #ffffff;"><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">カナ</th>
      <td class="telephone-number" style="background-color: #ffffff;"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">郵便番号</th>
      <td class="telephone-number" style="background-color: #ffffff;"><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">住所</th>
      <td class="address" style="background-color: #ffffff;"><%= @customer.address %></td>
    </tr>

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">電話番号</th>
      <td class="telephone-number" style="background-color: #ffffff;"><%= @customer.telephone_number %></td>
    </tr>

    <tr>
      <th class="table-secondary" style="background-color: #db7093; color: #ffffff;">メールアドレス</th>
      <td class="email" style="background-color: #ffffff;"><%= @customer.email %></td>
    </tr>

  </table>
</div>

