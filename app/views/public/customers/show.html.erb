<div class="col-sm-13 col-md-11 col-lg-9 px-6 px-sm-0 mx-auto align-self-center text-start" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="container mt-5">
    <h1 class="text-center"><i class="fa-solid fa-user"></i> my page</h1>
    
    <h4 class="my-3 mt-5 ml-5">登録情報</h4>
    <% unless current_customer.guest? %>
      <%= link_to "編集する", edit_public_customer_path, class: "btn btn-success mr-2" %>
      <%= link_to "退会する", unsubscribe_public_customer_path, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "編集する", "#", class: "btn btn-success mr-2", onclick: "alert('ゲストユーザーはこの操作を実行できません。');" %>
      <%= link_to "退会する", "#", class: "btn btn-danger", onclick: "alert('ゲストユーザーの退会はできません。');" %>
    <% end %>

  <div style="border-radius: 20px; overflow: hidden;">
    <table class="table table-bordered my-2" style="table-layout: fixed;">

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">氏名</th>
        <td style="background-color: #ffffff;"><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">カナ</th>
        <td style="background-color: #ffffff;"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">郵便番号</th>
        <td style="background-color: #ffffff;"><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">住所</th>
        <td style="background-color: #ffffff;"><%= @customer.address %></td>
      </tr>

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">電話番号</th>
        <td style="background-color: #ffffff;"><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th style="background-color: #db7093; color: #ffffff;">メールアドレス</th>
        <td style="background-color: #ffffff;"><%= @customer.email %></td>
      </tr>

    </table>
  </div>

    配送先
    <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-info mr-4" %>
    
    注文履歴
    <%= link_to "一覧を見る", public_orders_path, class: "btn btn-info" %>
    
  </div>
    
  <div class="col-md-2"></div>
</div>

<!--ゲストログインの場合は編集ボタンを出さないようにするコード-->
<% if @user && @user.email != "guest@example.com" %>
  <div class="row">
    <%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %>
  </div>
<% end %>