<div class="container">
  <div class="row">
    <div class="mx-auto">

     <h2 class="text-center mb-4 mt-5"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h2>

      <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch, local: true do |f| %>
       <% if @customer.errors.any? %>
       <div class="alert alert-danger">
          <%= @customer.errors.count %>件のエラーが発生しました
          <ul class="mb-0">
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message.gsub("last_name", "姓").gsub("first_name", "名").gsub("Name", "フリガナ(姓)").gsub("Image", "フリガナ(名)").gsub("Introduction", "郵便番号").gsub("Address", "住所").gsub("telephone_number", "電話番号").gsub("Email", "メールアドレス")  %></li>
            <% end %>
            </div>
          </ul>
        <% end %>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">氏名</label>
              <div class="col-lg-3">
                <%= f.text_field :last_name,autofocus: true, autocomplete: "last_name", class: 'form-control-2' %>
              </div>
              <div class="custom-gap"></div>
              <div class="col-lg-3">
                <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name",class: 'form-control-2' %>
              </div>
         </div><br>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">フリガナ</label>
              <div class="col-lg-3">
                <%= f.text_field :last_name_kana,autofocus: true, autocomplete: "last_name_kana",class: 'form-control-2' %>
              </div>
              <div class="custom-gap"></div>
              <div class="col-lg-3">
                <%= f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana",class: 'form-control-2' %>
              </div>
         </div><br>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">郵便番号</label>
              <div class="col-lg-3">
                <%= f.text_field :postal_code,autofocus: true, autocomplete: "postal_code",class: 'form-control' %>
              </div>
         </div><br>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">住所</label>
              <div class="col-lg-6">
                <%= f.text_field :address,autofocus: true, autocomplete: "address",class: 'form-control' %>
              </div>
         </div><br>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">電話番号</label>
              <div class="col-lg-6">
                <%= f.text_field :telephone_number,autofocus: true, autocomplete: "telephone_number",class: 'form-control' %>
              </div>
         </div><br>

         <div class="row">
              <label class="col-lg-4" style="background-color: #db7093; border-radius: 5px; padding: 5px; color: #ffffff; text-align: center;">メールアドレス</label>
              <div class="col-lg-4">
                <%= f.text_field :email,autofocus: true, autocomplete: "email",class: 'form-control' %>
              </div>
         </div><br>


         <div class='row justify-content-center'>
           <div style='margin-left: 70px;'>
            <div> <%= f.submit "編集内容を保存", class: "btn btn-success mt-2", style: "width: 200px; height: 40px;" %></div>
           </div>
         </div>

     <% end %>
    </div>
  </div>
</div>