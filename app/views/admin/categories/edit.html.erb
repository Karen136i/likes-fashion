<div class="col-sm-15 col-md-13 col-lg-12 px-5 px-sm-0 mx-auto align-self-center text-center" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">

            <thead>
              <div style="margin-top: 100px;"></div>
              <tr class="no-border">
                <th colspan="2" class="no-border">
                  <h3 class="text-center">カテゴリーの編集</h3>
                </th>
              </tr>
            </thead>
            
            <div style="margin-top: 50px;"></div>

           <%= form_with model: @category, url: admin_category_path(@category), method: :patch do |f| %>
           <div class="row">
             <div class="col">
               <h5>カテゴリー名</h5>
             </div>
             
             <div class="col">
               <%= f.text_field :name, class: "form-control" %>
             </div>
             
             <div class="col">
               <%= f.submit '変更を保存', class: "btn btn-success" %>
             </div>
             
           </div>
           <% end %>
           
      </div>
    </div>
  </div>
</div>