<div class='container' style="margin-top: 100px; margin-bottom: 100px;">
  <div class='row justify-content-center'>
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto align-self-center text-start">
      <h3 class="text-center">商品詳細</h3>

      <div class="row">
        <div class="col-md-6">
          <table class="table" style="border: none;">
            <tr>
              <td rowspan="5" style="border: none;" class="text-start">
                <div class="text-center mb-3">
                  <%= image_tag @item.image, size: "400x400", class: "img-fluid" %>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <!-- 商品詳細 -->
        <div class="col-md-6">
          <table class="table" style="border: none;">
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">商品名</th>
              <td style="border: none;"><%= @item.name %></td>
            </tr>
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">商品説明</th>
              <td style="border: none; white-space: normal;"><%= @item.introduction %></td>
            </tr>
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">税込価格:</th>
              <td style="border: none; white-space: normal;">￥<%= number_with_delimiter((@item.price * 1.1).round, delimiter: ',') %> (税込)</td>
            </tr>
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">税抜価格:</th>
              <td style="border: none; white-space: normal;">￥<%= number_with_delimiter((@item.price).ceil.to_i, delimiter: ',') %> (税抜)</td>
            </tr>
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">カテゴリー</th>
              <td style="border: none; white-space: normal;">
                <% if @item.category.present? %>
                  <%= @item.category.name %>
                <% else %>
                  カテゴリー未設定
                <% end %>
              </td>
            </tr>
            
            <tr>
              <th class="text-end" style="border: none; white-space: nowrap;">販売ステータス</th>
              <td style="border: none; white-space: normal;">
                <p style="<%= 'color:green;' if @item.status == 'on_sale' %> <%= 'color:gray;' if @item.status == 'not_on_sale' %> <%= 'color:#db7093;' if @item.status == 'back_ordered' %>">
                <%= @item.status_i18n %>
                </p>
              </td>
            </tr>
            
          </table>

          <div class="text-center">
            <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
            <div style="display: inline-block; width: 60px;"></div>
            <%= link_to "削除する", admin_item_path(@item), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
