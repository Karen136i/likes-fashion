<!-- /likes_fashion/app/views/admin/reviews/show.html.erb -->
<div class='container' style="margin-top: 40px; margin-bottom: 50px;">
  <div class='row justify-content-center'>
    <div class="col-sm-10 col-md-9 col-lg-8 px-6 px-sm-0 mx-auto align-self-center text-start">
    <h3 class="text-center" style="margin-bottom: 40px;"><%= @review.item.name %>のレビュー詳細</h3>
      <div class="col-md-12">
        <table class="table" style="border: none;">

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">名前(ニックネーム)：</th>
            <td style="border: none; text-end">
              <%= link_to "#{@review.customer.last_name} #{@review.customer.first_name}", admin_customer_path(@review.customer.id) %> (<%= @review.nickname %>)
              <div class="d-flex justify-content-end">
                <%= link_to "削除", admin_review_path(@review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
                <%= link_to "お礼コメント", new_admin_review_comment_path(review_id: @review.id), class: "btn btn-primary  ml-3" %>
              </div>
            </td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">投稿日時：</th>
            <td style="border: none; white-space: normal;"><%= @review.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d ") %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">評価:</th>
            <td style="border: none; white-space: normal;">
              <span class="star-rating">
                <% 5.times do |i| %>
                  <% if i < @review.star %>
                    <span class="star">&#9733;</span> <!-- filled star -->
                  <% else %>
                    <span class="star">&#9734;</span> <!-- empty star -->
                  <% end %>
                <% end %>
              </span>
            </td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">コメント:</th>
            <td style="border: none; white-space: normal;"><%= @review.review_content %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">お礼コメント:</th>
            <td style="border: none; white-space: normal;">
              <% @review.comments.each do |comment| %>
                <div class="comment-container">
                  <p><%= comment.content %></p>
                  <%= link_to '削除', admin_review_comment_path(review_id: @review.id, id: comment.id),
                              method: :delete,
                              data: { confirm: 'このコメントを削除してよろしいですか？' },
                              class: 'btn btn-danger btn-sm' %>
                  <%= link_to '編集', edit_admin_review_comment_path(review_id: @review.id, id: comment.id), class: 'btn btn-primary btn-sm' %>
                </div>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
