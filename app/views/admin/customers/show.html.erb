<div class='container' style="margin-top: 100px; margin-bottom: 100px;">
  <div class='row justify-content-center'>
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto align-self-center text-start">
      <h3 class="text-center"><strong><%= @customer.last_name %> <%= @customer.first_name %></strong> さんの会員詳細</h3>
      <div style="margin-bottom: 30px;"></div>

      <div class='row justify-content-center offset-md-3'>
        <table class="table" style="border: none;">

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">会員ID</th>
            <td style="border: none;"><%= @customer.id %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">氏名</th>
            <td style="border: none;"><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">フリガナ</th>
            <td style="border: none;"><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">郵便番号</th>
            <td style="border: none;"><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">住所</th>
            <td style="border: none;"><%= @customer.address %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">電話番号</th>
            <td style="border: none;"><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">メールアドレス</th>
            <td style="border: none;"><%= @customer.email %></td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;">会員ステータス</th>
            <td style="border: none;">
              <% if @customer.is_active %>
              <span class='text-success'>有効</span>
              <% else %>
              <span class='text-secondary'>退会</span>
              <% end %>
            </td>
          </tr>

          <tr>
            <th class="text-end" style="border: none; white-space: nowrap;"></th>
            <td style="border: none;"><%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success btn-sm", style: "width: 144px; height: 31px;" %></td>
            <td style="border: none;">
              <%= link_to '注文履歴一覧を見る', admin_orders_path(customer_id: @customer), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>

        </table>
      </div>
    </div>
  </div>
</div>

