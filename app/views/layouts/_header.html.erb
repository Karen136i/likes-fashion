            <%= f.text_field :content, placeholder: "商品名を検索" %>
            <%= f.submit "🔍" %>
          <% end %>
        <% end %>
        
        <% if admin_signed_in? %>
          <%= form_with url: search_path, method: :get, local: true do |f| %>
