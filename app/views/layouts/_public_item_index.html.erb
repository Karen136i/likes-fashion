  <div class="container">
    <div class="row row-cols-1 row-cols-md-3">
      <% items.each do |item| %>
      <div class="col mb-4">
        <div class="card h-200">
          <% if item.image.attached? %>
            <%= link_to public_item_path(item) do %>
